        <Label Content="Current skill level" HorizontalAlignment="Left" Height="29" Margin="147,53,0,0" VerticalAlignment="Top" Width="105"/>
        <Label Content="Target skill level" HorizontalAlignment="Left" Height="29" Margin="409,53,0,0" VerticalAlignment="Top" Width="122"/>

    </Grid>
</Window>
